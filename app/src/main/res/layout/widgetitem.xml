<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cashshope_widget_picture"
        android:layout_width="147dp"
        android:layout_height="150dp"></ImageView>

    <TextView
        android:id="@+id/widgetprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cashshope_widget_picture"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/cashshope_widget_picture"
        android:text="Test" />

    <TextView
        android:id="@+id/widgetitemtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/widgetprice"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/cashshope_widget_picture"
        android:text="TextView"
        android:textSize="20sp" />

</RelativeLayout>